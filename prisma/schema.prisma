generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  name              String?
  email             String
  password          String?
  image             String?
  role              Role?
  hourlyRate        Decimal?           @db.Decimal(10, 2)
  monthlyBaseHours  Int?
  employeeStatus    EmployeeStatus?    @default(ACTIVE)
  joinedAt          DateTime?
  worksOnSaturday   Boolean            @default(false)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  resetOTP          String?
  resetOTPExpiry    DateTime?
  hoursPerWeek      Decimal?           @default(0) @db.Decimal(5, 2)
  phone             String?            @unique
  monthlyRate       Int?
  accounts          Account[]
  auditLogs         AuditLog[]
  bonuses           Bonus[]
  client            Client?
  deductions        Deduction[]
  leaves            Leave[]
  payrolls          Payroll[]
  sessions          Session[]
  assignedTasks     Task[]             @relation("AssignedTasks")
  feedbackSent      Feedback[]         @relation("FeedbackSender")
  feedbackResponses FeedbackResponse[] @relation("FeedbackResponseSender")
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String  @default("pending")
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Task {
  id                   String              @id @default(cuid())
  title                String?
  description          String
  taskType             String?
  status               TaskStatus?         @default(PENDING)
  dueDate              DateTime?
  clientUserId         Int?
  folderType           String?
  assignedTo           Int
  qc_specialist        Int?
  scheduler            Int?
  videographer         Int?
  createdBy            Int?
  clientId             String?
  monthlyDeliverableId String?
  driveFolderId        String?
  attachments          Json?
  driveLinks           String[]
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  priority             String?
  taskCategory         String?
  nextDestination      String?
  clientReview         Boolean?            @default(false)
  requiresClientReview Boolean?            @default(false)
  workflowStep         String?
  feedback             String?
  qcNotes              String?
  qcResult             String?
  route                String?
  files                File[]
  templateFor          RecurringTask[]     @relation("TemplateTask")
  user                 User                @relation("AssignedTasks", fields: [assignedTo], references: [id])
  client               Client?             @relation(fields: [clientId], references: [id])
  monthlyDeliverable   MonthlyDeliverable? @relation(fields: [monthlyDeliverableId], references: [id])
}

model RecurringTask {
  id             String             @id @default(cuid())
  clientId       String
  deliverableId  String
  templateTaskId String?
  nextRunDate    DateTime
  lastRunDate    DateTime?
  scheduleType   String
  active         Boolean            @default(true)
  createdAt      DateTime           @default(now())
  client         Client             @relation(fields: [clientId], references: [id])
  deliverable    MonthlyDeliverable @relation(fields: [deliverableId], references: [id])
  templateTask   Task?              @relation("TemplateTask", fields: [templateTaskId], references: [id])
}

model Client {
  id                   String               @id @default(cuid())
  userId               Int?                 @unique
  name                 String
  email                String
  companyName          String?
  phone                String
  createdBy            String?
  status               String               @default("active")
  accountManagerId     String?
  startDate            DateTime?
  renewalDate          DateTime?
  lastActivity         DateTime?
  requiresClientReview Boolean              @default(false)
  requiresVideographer Boolean              @default(false)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  uploadedFiles        Json?
  brandGuidelines      Json?
  projectSettings      Json?
  billing              Json?
  postingSchedule      Json?
  currentProgress      Json?
  driveFolderId        String?
  rawFootageFolderId   String?
  essentialsFolderId   String?
  emails               String[]             @default([])
  phones               String[]             @default([])
  brandAssets          BrandAsset[]
  user                 User?                @relation(fields: [userId], references: [id])
  monthlyDeliverables  MonthlyDeliverable[]
  monthlyRuns          MonthlyRun[]
  recurringTasks       RecurringTask[]
  tasks                Task[]
}

model MonthlyDeliverable {
  id              String          @id @default(cuid())
  clientId        String
  type            String
  quantity        Int
  videosPerDay    Int
  postingSchedule String
  postingDays     String[]
  postingTimes    String[]
  platforms       String[]
  description     String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  client          Client          @relation(fields: [clientId], references: [id])
  recurringTasks  RecurringTask[]
  tasks           Task[]
}

model BrandAsset {
  id         String   @id @default(cuid())
  clientId   String
  name       String
  type       String
  fileUrl    String
  fileName   String
  fileSize   String
  uploadedAt DateTime @default(now())
  uploadedBy String
  client     Client   @relation(fields: [clientId], references: [id])
}

model File {
  id         String   @id @default(cuid())
  taskId     String
  name       String
  url        String
  mimeType   String?
  size       Int?
  uploadedAt DateTime @default(now())
  uploadedBy Int?
  createdAt  DateTime @default(now())
  task       Task     @relation(fields: [taskId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    Int?
  type      String
  title     String
  body      String?
  payload   Json?
  channel   String[] @default([])
  delivered Boolean  @default(false)
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model NotificationPreference {
  id        String   @id @default(cuid())
  userId    Int
  channel   String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([userId, channel])
}

model MonthlyRun {
  id       String   @id @default(cuid())
  clientId String
  month    Int
  year     Int
  runAt    DateTime @default(now())
  client   Client   @relation(fields: [clientId], references: [id])
}

model Bonus {
  id         Int      @id @default(autoincrement())
  employeeId Int
  amount     Decimal  @db.Decimal(12, 2)
  addedBy    Int?
  createdAt  DateTime @default(now())
  employee   User     @relation(fields: [employeeId], references: [id])
}

model Leave {
  id           Int         @id @default(autoincrement())
  employeeId   Int
  startDate    DateTime
  endDate      DateTime
  reason       String?
  status       LeaveStatus @default(PENDING)
  numberOfDays Int
  approvedBy   Int?
  createdAt    DateTime    @default(now())
  deduction    Deduction?
  employee     User        @relation(fields: [employeeId], references: [id])
}

model Deduction {
  id         Int      @id @default(autoincrement())
  employeeId Int
  amount     Decimal  @db.Decimal(12, 2)
  leaveId    Int?     @unique
  month      DateTime
  createdAt  DateTime @default(now())
  employee   User     @relation(fields: [employeeId], references: [id])
  leave      Leave?   @relation(fields: [leaveId], references: [id])
}

model Payroll {
  id              Int           @id @default(autoincrement())
  employeeId      Int
  periodStart     DateTime
  periodEnd       DateTime
  baseSalary      Decimal       @db.Decimal(12, 2)
  totalBonuses    Decimal       @default(0) @db.Decimal(12, 2)
  totalDeductions Decimal       @default(0) @db.Decimal(12, 2)
  netPay          Decimal       @db.Decimal(12, 2)
  status          PayrollStatus @default(PENDING)
  createdAt       DateTime      @default(now())
  paidAt          DateTime?
  employee        User          @relation(fields: [employeeId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  entity    String?
  entityId  String?
  details   String?
  metadata  Json?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])

  @@index([action])
  @@index([entity, entityId])
  @@index([timestamp])
  @@index([userId])
}

model Feedback {
  id        String             @id @default(cuid())
  subject   String
  message   String
  category  FeedbackCategory
  priority  FeedbackPriority
  status    FeedbackStatus     @default(PENDING)
  senderId  Int
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  sender    User               @relation("FeedbackSender", fields: [senderId], references: [id])
  responses FeedbackResponse[]

  @@index([senderId])
  @@index([status])
  @@index([createdAt])
  @@map("feedback")
}

model FeedbackResponse {
  id         String   @id @default(cuid())
  message    String
  feedbackId String
  senderId   Int
  createdAt  DateTime @default(now())
  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
  sender     User     @relation("FeedbackResponseSender", fields: [senderId], references: [id])

  @@index([feedbackId])
  @@index([senderId])
  @@map("feedback_responses")
}

enum Role {
  admin
  manager
  editor
  videographer
  scheduler
  client
  qc
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  TERMINATED
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PayrollStatus {
  PENDING
  PAID
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  READY_FOR_QC
  QC_IN_PROGRESS
  COMPLETED
  SCHEDULED
  ON_HOLD
  REJECTED
  CLIENT_REVIEW
  VIDEOGRAPHER_ASSIGNED
}

enum FeedbackCategory {
  GENERAL
  TECHNICAL
  WORKFLOW
  SUGGESTION
  BUG_REPORT
}

enum FeedbackPriority {
  LOW
  MEDIUM
  HIGH
}

enum FeedbackStatus {
  PENDING
  ACKNOWLEDGED
  IN_PROGRESS
  RESOLVED
}
