model BrandAsset {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])

  name        String
  type        String
  fileUrl     String
  fileName    String
  fileSize    String
  uploadedAt  DateTime @default(now())
