generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  manager
  editor
  videographer
  qc_specialist
  scheduler
  client
  qc
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String?
  image     String?
  role      Role     @default(client)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts  Account[]
  sessions  Session[]
  assignedTasks Task[] @relation("AssignedTasks")
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  taskType    String
  status      TaskStatus?  @default(PENDING)
  dueDate     DateTime
  assignedTo  Int
  createdBy   Int
  clientId    String?
  driveFolderId String?
  attachments Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  driveLinks   String[]

  user   User     @relation("AssignedTasks", fields: [assignedTo], references: [id])
  client Client?  @relation(fields: [clientId], references: [id])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  READY_FOR_QC
  QC_IN_PROGRESS
  COMPLETED
  ON_HOLD
  REJECTED
}

model Client {
  id                  String   @id @default(cuid())
  name                String
  email               String  
  companyName         String?
  phone               String?
  createdBy           String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  tasks               Task[]
  uploadedFiles       Json?


  // Google Drive
  driveFolderId       String?
  rawFootageFolderId  String?
  essentialsFolderId  String?

  // Deliverables
  longFormVideos      Int      @default(0)
  shortFormClips      Int      @default(0)
  socialPosts         Int      @default(0)
  customDeliverables  String?
}


