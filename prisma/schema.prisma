model BrandAsset {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])

  name        String
  type        String
  fileUrl     String
  fileName    String
  fileSize    String
  uploadedAt  DateTime @default(now())
  uploadedBy  String
}

model File {
  id          String   @id @default(cuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id])

  name        String
  url         String
  mimeType    String?
  size        Int?
  uploadedAt  DateTime @default(now())
  uploadedBy  Int?   // userId of who uploaded the file

  createdAt   DateTime @default(now())
}

model Notification {
  id          String   @id @default(cuid())
  userId      Int?  // null => broadcast
  type        String
  title       String
  body        String?
  payload     Json?
  channel     String[] @default([])
  delivered   Boolean  @default(false)
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model NotificationPreference {
  id        String   @id @default(cuid())
  userId    Int
  channel   String   // "in-app" | "slack"
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([userId, channel])
}

model MonthlyRun {
  id        String   @id @default(cuid())
  clientId  String
  month     Int
  year      Int
  runAt     DateTime @default(now())

  client    Client   @relation(fields: [clientId], references: [id])
}


// --- Payroll + Leave models


model Bonus {
id Int @id @default(autoincrement())
employee User @relation(fields: [employeeId], references: [id])
employeeId Int
amount Decimal @db.Decimal(12,2)
addedBy Int? // admin user id; optional
createdAt DateTime @default(now())
}


model Leave {
  id           Int      @id @default(autoincrement())
  employee     User     @relation(fields: [employeeId], references: [id])
  employeeId   Int
  startDate    DateTime
  endDate      DateTime
  reason       String?
  status       LeaveStatus @default(PENDING)
  numberOfDays Int
  approvedBy   Int?
  createdAt    DateTime @default(now())

  deduction    Deduction?
}


model Deduction {
  id         Int      @id @default(autoincrement())
  employee   User     @relation(fields: [employeeId], references: [id])
  employeeId Int
  amount     Decimal  @db.Decimal(12,2)

  leave      Leave?   @relation(fields: [leaveId], references: [id])
  leaveId    Int?     @unique  // <-- required to make 1:1 valid

  month      DateTime
  createdAt  DateTime @default(now())
}



model Payroll {
id Int @id @default(autoincrement())
employee User @relation(fields: [employeeId], references: [id])
employeeId Int
periodStart DateTime
periodEnd DateTime
baseSalary Decimal @db.Decimal(12,2)
totalBonuses Decimal @db.Decimal(12,2) @default(0)
totalDeductions Decimal @db.Decimal(12,2) @default(0)
netPay Decimal @db.Decimal(12,2)
status PayrollStatus @default(PENDING)
createdAt DateTime @default(now())
paidAt DateTime?
}







