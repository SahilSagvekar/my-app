generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  name              String?
  email             String
  password          String?
  image             String?
  role              Role?
  phone             String?            @unique
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  employeeStatus    EmployeeStatus?    @default(ACTIVE)
  hourlyRate        Decimal?           @db.Decimal(10, 2)
  hoursPerWeek      Decimal?           @default(0) @db.Decimal(5, 2)
  joinedAt          DateTime?
  monthlyBaseHours  Int?
  worksOnSaturday   Boolean            @default(false)
  resetOTP          String?
  resetOTPExpiry    DateTime?
  monthlyRate       Int?
  accounts          Account[]
  auditLogs         AuditLog[]
  bonuses           Bonus[]
  client            Client?
  deductions        Deduction[]
  leaves            Leave[]
  payrolls          Payroll[]
  sessions          Session[]
  assignedTasks     Task[]             @relation("AssignedTasks")
  clientTasks       Task[]             @relation("ClientUserTasks")
  feedbackSent      Feedback[]         @relation("FeedbackSender")
  feedbackResponses FeedbackResponse[] @relation("FeedbackResponseSender")
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String  @default("pending")
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Task {
  id                   String              @id @default(cuid())
  title                String?
  description          String
  taskType             String?
  status               TaskStatus?         @default(PENDING)
  dueDate              DateTime?
  assignedTo           Int
  createdBy            Int?
  clientId             String?
  monthlyDeliverableId String?
  driveFolderId        String?
  attachments          Json?
  driveLinks           String[]
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  qc_specialist        Int?
  scheduler            Int?
  videographer         Int?
  nextDestination      String?
  priority             String?
  requiresClientReview Boolean?            @default(false)
  taskCategory         String?
  workflowStep         String?
  feedback             String?
  qcNotes              String?
  qcResult             String?
  route                String?
  clientReview         Boolean?            @default(false)
  clientUserId         Int?
  folderType           String?
  monthFolder          String?
  outputFolderId       String?
  deliverableType      String?
  hasCovers            Boolean             @default(false)
  hasMainFile          Boolean             @default(false)
  hasMusicLicense      Boolean             @default(false)
  hasThumbnails        Boolean             @default(false)
  hasTiles             Boolean             @default(false)
  files                File[]
  templateFor          RecurringTask[]     @relation("TemplateTask")
  user                 User                @relation("AssignedTasks", fields: [assignedTo], references: [id])
  client               Client?             @relation(fields: [clientId], references: [id])
  clientUser           User?               @relation("ClientUserTasks", fields: [clientUserId], references: [id])
  monthlyDeliverable   MonthlyDeliverable? @relation(fields: [monthlyDeliverableId], references: [id])
}

model RecurringTask {
  id             String             @id @default(cuid())
  clientId       String
  deliverableId  String
  templateTaskId String?
  nextRunDate    DateTime
  lastRunDate    DateTime?
  scheduleType   String
  active         Boolean            @default(true)
  createdAt      DateTime           @default(now())
  client         Client             @relation(fields: [clientId], references: [id])
  deliverable    MonthlyDeliverable @relation(fields: [deliverableId], references: [id])
  templateTask   Task?              @relation("TemplateTask", fields: [templateTaskId], references: [id])
}

model Client {
  id                   String               @id @default(cuid())
  name                 String
  email                String
  emails               String[]             @default([])
  companyName          String?
  phone                String
  phones               String[]             @default([])
  createdBy            String?
  status               String               @default("active")
  accountManagerId     String?
  startDate            DateTime?
  renewalDate          DateTime?
  lastActivity         DateTime?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  uploadedFiles        Json?
  brandGuidelines      Json?
  projectSettings      Json?
  billing              Json?
  postingSchedule      Json?
  currentProgress      Json?
  driveFolderId        String?
  rawFootageFolderId   String?
  essentialsFolderId   String?
  userId               Int?                 @unique
  requiresClientReview Boolean              @default(false)
  requiresVideographer Boolean              @default(false)
  outputsFolderId      String?
  brandAssets          BrandAsset[]
  user                 User?                @relation(fields: [userId], references: [id])
  monthlyDeliverables  MonthlyDeliverable[]
  monthlyRuns          MonthlyRun[]
  recurringTasks       RecurringTask[]
  tasks                Task[]
}

model MonthlyDeliverable {
  id              String          @id @default(cuid())
  clientId        String
  type            String
  quantity        Int
  videosPerDay    Int
  postingSchedule String
  postingDays     String[]
  postingTimes    String[]
  platforms       String[]
  description     String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  client          Client          @relation(fields: [clientId], references: [id])
  recurringTasks  RecurringTask[]
  tasks           Task[]
}

model BrandAsset {
  id         String   @id @default(cuid())
  clientId   String
  name       String
  type       String
  fileUrl    String
  fileName   String
  fileSize   String
  uploadedAt DateTime @default(now())
  uploadedBy String
  client     Client   @relation(fields: [clientId], references: [id])
}

model File {
  id           String    @id @default(cuid())
  taskId       String
  name         String
  url          String
  mimeType     String?
  size         BigInt
  uploadedAt   DateTime  @default(now())
  uploadedBy   Int?
  createdAt    DateTime  @default(now())
  folderType   String?
  s3Key        String?
  isActive     Boolean   @default(true)
  replacedAt   DateTime?
  replacedBy   String?
  revisionNote String?
  version      Int       @default(1)
  task         Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId, folderType])
  @@index([taskId, isActive])
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  title     String
  body      String?
  delivered Boolean  @default(false)
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  payload   Json?
  updatedAt DateTime @updatedAt
  channel   String[] @default([])
  userId    Int?

  @@index([userId])
}

model NotificationPreference {
  id        String   @id @default(cuid())
  channel   String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  userId    Int

  @@unique([userId, channel])
}

model MonthlyRun {
  id       String   @id @default(cuid())
  clientId String
  month    Int
  year     Int
  runAt    DateTime @default(now())
  client   Client   @relation(fields: [clientId], references: [id])
}

model Bonus {
  id         Int      @id @default(autoincrement())
  employeeId Int
  amount     Decimal  @db.Decimal(12, 2)
  addedBy    Int?
  createdAt  DateTime @default(now())
  employee   User     @relation(fields: [employeeId], references: [id])
}

model Leave {
  id           Int         @id @default(autoincrement())
  employeeId   Int
  startDate    DateTime
  endDate      DateTime
  reason       String?
  status       LeaveStatus @default(PENDING)
  numberOfDays Int
  approvedBy   Int?
  createdAt    DateTime    @default(now())
  deduction    Deduction?
  employee     User        @relation(fields: [employeeId], references: [id])
}

model Deduction {
  id         Int      @id @default(autoincrement())
  employeeId Int
  amount     Decimal  @db.Decimal(12, 2)
  leaveId    Int?     @unique
  month      DateTime
  createdAt  DateTime @default(now())
  employee   User     @relation(fields: [employeeId], references: [id])
  leave      Leave?   @relation(fields: [leaveId], references: [id])
}

model Payroll {
  id              Int           @id @default(autoincrement())
  employeeId      Int
  periodStart     DateTime
  periodEnd       DateTime
  baseSalary      Decimal       @db.Decimal(12, 2)
  totalBonuses    Decimal       @default(0) @db.Decimal(12, 2)
  totalDeductions Decimal       @default(0) @db.Decimal(12, 2)
  netPay          Decimal       @db.Decimal(12, 2)
  status          PayrollStatus @default(PENDING)
  createdAt       DateTime      @default(now())
  paidAt          DateTime?
  employee        User          @relation(fields: [employeeId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  entity    String?
  entityId  String?
  details   String?
  metadata  Json?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])

  @@index([action])
  @@index([entity, entityId])
  @@index([timestamp])
  @@index([userId])
}

model Feedback {
  id          String              @id @default(cuid())
  subject     String
  message     String              @db.Text
  category    String              // 'general' | 'technical' | 'workflow' | 'suggestion' | 'bug-report'
  priority    String              // 'low' | 'medium' | 'high'
  status      String              @default("pending") // 'pending' | 'acknowledged' | 'in-progress' | 'resolved'
  senderId    Int
  sender      User                @relation("FeedbackSender", fields: [senderId], references: [id])
  responses   FeedbackResponse[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([senderId])
  @@index([status])
}

model FeedbackResponse {
  id         String   @id @default(cuid())
  message    String   @db.Text
  feedbackId String
  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
  senderId   Int
  sender     User     @relation("FeedbackResponseSender", fields: [senderId], references: [id])
  createdAt  DateTime @default(now())

  @@index([feedbackId])
  @@index([senderId])
}
enum Role {
  admin
  manager
  editor
  videographer
  scheduler
  client
  qc
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  TERMINATED
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PayrollStatus {
  PENDING
  PAID
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  READY_FOR_QC
  QC_IN_PROGRESS
  COMPLETED
  ON_HOLD
  REJECTED
  SCHEDULED
  CLIENT_REVIEW
  VIDEOGRAPHER_ASSIGNED
}

enum FeedbackCategory {
  GENERAL
  TECHNICAL
  WORKFLOW
  SUGGESTION
  BUG_REPORT
}

enum FeedbackPriority {
  LOW
  MEDIUM
  HIGH
}

enum FeedbackStatus {
  PENDING
  ACKNOWLEDGED
  IN_PROGRESS
  RESOLVED
}
