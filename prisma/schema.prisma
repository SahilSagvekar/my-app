generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  manager
  editor
  videographer
  // qc_specialist
  scheduler
  client
  qc
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  TERMINATED
}


enum LeaveStatus {
PENDING
APPROVED
REJECTED
}


enum PayrollStatus {
PENDING
PAID
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   
  password  String?
  image     String?
  role      Role?    

    // --- payroll / employee fields (Option 1: extend User)
  hourlyRate Decimal? @db.Decimal(10,2)
  monthlyBaseHours Int?
  employeeStatus EmployeeStatus? @default(ACTIVE)
  joinedAt DateTime?
  worksOnSaturday  Boolean         @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  client    Client?
  accounts  Account[]
  sessions  Session[]
  assignedTasks Task[] @relation("AssignedTasks")

  // relations to payroll models
  bonuses Bonus[]
  leaves Leave[]
  deductions Deduction[]
  payrolls Payroll[]
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String  @default("pending")
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Task {
  id          String   @id @default(cuid())
  title       String?
  description String
  taskType    String?
  status      TaskStatus?  @default(PENDING)
  dueDate     DateTime?
  files       File[]
  clientUserId  Int?
  folderType     String? 

  assignedTo  Int     
  qc_specialist  Int?  
  scheduler     Int?   
  videographer  Int?   
  createdBy   Int?
  clientId    String?

  monthlyDeliverableId String?
  monthlyDeliverable   MonthlyDeliverable? @relation(fields: [monthlyDeliverableId], references: [id])


  driveFolderId String?
  attachments   Json?
  driveLinks    String[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation("AssignedTasks", fields: [assignedTo], references: [id])
  client      Client?  @relation(fields: [clientId], references: [id])

  priority             String?   // "urgent" | "high" | "medium" | "low"
  taskCategory         String?   // "design" | "video" | "copywriting"
  nextDestination      String?   // "client" | "scheduler" | "editor"
  clientReview         Boolean?  @default(false)
  requiresClientReview Boolean?  @default(false)
  workflowStep         String?   // "qc_review" etc.

  feedback   String?  // for approved QC feedback
  qcNotes    String?  // for rejection notes
  qcResult   String?  // optional: "APPROVED" | "REJECTED"
  route      String?  // optional: "scheduler" | "client_then_scheduler" | "editor"
  


  templateFor RecurringTask[] @relation("TemplateTask")
}

model RecurringTask {
  id              String   @id @default(cuid())

  clientId        String
  client          Client   @relation(fields: [clientId], references: [id])

  deliverableId   String
  deliverable     MonthlyDeliverable @relation(fields: [deliverableId], references: [id])

  // NEW: which task is the blueprint?
  templateTaskId  String?
  templateTask    Task?   @relation("TemplateTask", fields: [templateTaskId], references: [id])

  nextRunDate     DateTime
  lastRunDate     DateTime?
  scheduleType    String        // e.g. "monthly" | "manual"
  active          Boolean @default(true)

  createdAt       DateTime @default(now())
}



enum TaskStatus {
  PENDING
  IN_PROGRESS
  READY_FOR_QC
  QC_IN_PROGRESS
  COMPLETED
  SCHEDULED
  ON_HOLD
  REJECTED
  CLIENT_REVIEW
  VIDEOGRAPHER_ASSIGNED
}

model Client {
  id                  String   @id @default(cuid())
  userId Int? @unique
  user   User? @relation(fields: [userId], references: [id])

  name                String
  email               String   
  companyName         String?
  phone               String?
  createdBy           String?

  status              String   @default("active")
  accountManagerId    String?
  startDate           DateTime?
  renewalDate         DateTime?
  lastActivity        DateTime?
  requiresClientReview Boolean  @default(false)
  requiresVideographer Boolean  @default(false)


  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // RELATIONS
  monthlyRuns         MonthlyRun[]
  tasks               Task[]
  monthlyDeliverables MonthlyDeliverable[]
  brandAssets         BrandAsset[]
  recurringTasks      RecurringTask[]

  // JSON BLOBS FOR UI
  uploadedFiles       Json?
  brandGuidelines     Json?
  projectSettings     Json?
  billing             Json?
  postingSchedule     Json?
  currentProgress     Json?

  // GOOGLE DRIVE
  driveFolderId       String?
  rawFootageFolderId  String?
  essentialsFolderId  String?
  
}



model MonthlyDeliverable {
  id              String   @id @default(cuid())
  clientId        String
  client          Client   @relation(fields: [clientId], references: [id])

  type            String
  quantity        Int
  videosPerDay    Int
  postingSchedule String       // weekly | bi-weekly | monthly | custom
  postingDays     String[]
  postingTimes    String[]
  platforms       String[]
  description     String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tasks           Task[]
  recurringTasks  RecurringTask[]
}


