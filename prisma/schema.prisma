generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  manager
  editor
  videographer
  qc_specialist
  scheduler
  client
  qc
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String?
  image     String?
  role      Role     @default(client)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts  Account[]
  sessions  Session[]
  assignedTasks Task[] @relation("AssignedTasks")
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String  @default("pending")
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Task {
  id          String   @id @default(cuid())
  title       String?
  description String
  taskType    String?
  status      TaskStatus?  @default(PENDING)
  dueDate     DateTime?

  assignedTo  Int     
  qc_specialist  Int?  
  scheduler     Int?   
  videographer  Int?   
  createdBy   Int?
  clientId    String?

  monthlyDeliverableId String?
  monthlyDeliverable   MonthlyDeliverable? @relation(fields: [monthlyDeliverableId], references: [id])


  driveFolderId String?
  attachments   Json?
  driveLinks    String[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation("AssignedTasks", fields: [assignedTo], references: [id])
  client      Client?  @relation(fields: [clientId], references: [id])

  templateFor RecurringTask[] @relation("TemplateTask")
}

model RecurringTask {
  id              String   @id @default(cuid())

  clientId        String
  client          Client   @relation(fields: [clientId], references: [id])

  deliverableId   String
  deliverable     MonthlyDeliverable @relation(fields: [deliverableId], references: [id])

  // NEW: which task is the blueprint?
  templateTaskId  String?
  templateTask    Task?   @relation("TemplateTask", fields: [templateTaskId], references: [id])

  nextRunDate     DateTime
  lastRunDate     DateTime?
  scheduleType    String        // e.g. "monthly" | "manual"
  active          Boolean @default(true)

  createdAt       DateTime @default(now())
}



enum TaskStatus {
  PENDING
  IN_PROGRESS
  READY_FOR_QC
  QC_IN_PROGRESS
  COMPLETED
  ON_HOLD
  REJECTED
}

model Client {
  id                  String   @id @default(cuid())
  name                String
  email               String   
  companyName         String?
  phone               String?
  createdBy           String?

  status              String   @default("active")
  accountManagerId    String?
  startDate           DateTime?
  renewalDate         DateTime?
  lastActivity        DateTime?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // RELATIONS
  tasks               Task[]
  monthlyDeliverables MonthlyDeliverable[]
  brandAssets         BrandAsset[]
  recurringTasks      RecurringTask[]

  // JSON BLOBS FOR UI
  uploadedFiles       Json?
  brandGuidelines     Json?
  projectSettings     Json?
  billing             Json?
  postingSchedule     Json?
  currentProgress     Json?

  // GOOGLE DRIVE
  driveFolderId       String?
  rawFootageFolderId  String?
  essentialsFolderId  String?
}



model MonthlyDeliverable {
  id              String   @id @default(cuid())
  clientId        String
  client          Client   @relation(fields: [clientId], references: [id])

  type            String
  quantity        Int
  videosPerDay    Int
  postingSchedule String       // weekly | bi-weekly | monthly | custom
  postingDays     String[]
  postingTimes    String[]
  platforms       String[]
  description     String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tasks           Task[]
  recurringTasks  RecurringTask[]
}


